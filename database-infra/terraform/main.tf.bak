
# Ajuste da tabela de Clientes com throughput provisionado e tags
resource "aws_dynamodb_table" "fast_food_clients" {
  name           = "${var.environment}-FastFoodClients"
  billing_mode   = "PROVISIONED"  # Alterado de PAY_PER_REQUEST para PROVISIONED
  read_capacity  = 5
  write_capacity = 5
  hash_key       = "ClienteId"

  attribute {
    name = "ClienteId"
    type = "S"
  }

  attribute {
    name = "CPF"
    type = "S"
  }

  global_secondary_index {
    name               = "CPFIndex"
    hash_key           = "CPF"
    projection_type    = "ALL"
    read_capacity      = 5
    write_capacity     = 5
  }

  tags = var.tags
}

