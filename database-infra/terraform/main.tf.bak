resource "aws_dynamodb_table" "clients_table" {
  name           = "dev-FastFoodClients"
  billing_mode   = "PROVISIONED"
  read_capacity  = 5
  write_capacity = 5
  hash_key       = "ClienteId"

  attribute {
    name = "ClienteId"
    type = "S"
  }

  attribute {
    name = "CPF"
    type = "S"
  }

  global_secondary_index {
    name               = "CPFIndex"
    hash_key           = "CPF"
    projection_type    = "ALL"
    read_capacity      = 5
    write_capacity     = 5
  }

  tags = var.tags
}

variable "project_name" {
  description = "Project name for tagging resources"
  type        = string
  default     = "FastFood"
}

variable "tags" {
  description = "Common tags for all resources"
  type        = map(string)
  default = {
    Project        = "FastFood"
    CreatedBy      = "Terraform"
    ExpirationDate = "2025-04-30"
    CostCenter     = "Education"
  }
}